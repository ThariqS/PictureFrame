<h1>Listing contents</h1>

<table>
  <tr>
    <th>Url</th>
    <th>Watched</th>
    <th>Thumbnail url</th>
  </tr>

<% @contents.each do |content| %>
  <tr>
    <td><%=h content.url %></td>
    <td><%=h content.watched %></td>
    <td><%=h content.type %></td>
    <td><%= link_to 'Show', content %></td>
    <td><%= link_to 'Edit', edit_content_path(content) %></td>
    <td><%= link_to 'Destroy', content, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New content', new_content_path %>
<%= link_to "Upload Picture", {:controller => 'contents', :action => "upload", :id => "1"}, {:class => "titleLink" } %>
